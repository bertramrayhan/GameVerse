<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".DetailActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryBackground"
        >

        <ImageView
            android:id="@+id/backdropImage"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/posterImage"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="-120dp"
            app:layout_constraintStart_toStartOf="@+id/backdropImage"
            app:layout_constraintBottom_toBottomOf="@+id/backdropImage"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CornerImage"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/judulGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleGameCard"
            android:layout_marginVertical="17dp"
            android:layout_marginHorizontal="20dp"
            style="@style/TextAppearance.App.HeadlineSmall"
            app:layout_constraintTop_toBottomOf="@id/backdropImage"
            app:layout_constraintStart_toEndOf="@id/posterImage"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratingGameCard"
            android:layout_marginVertical="6dp"
            style="@style/TextAppearance.App.BodyMedium"
            app:layout_constraintTop_toBottomOf="@id/judulGame"
            app:layout_constraintStart_toStartOf="@id/judulGame"/>

        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/releaseDate"
            android:layout_marginVertical="14dp"
            style="@style/TextAppearance.App.TitleLarge"
            app:layout_constraintTop_toBottomOf="@id/rating"
            app:layout_constraintStart_toStartOf="@id/judulGame"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/synopsis"
            android:layout_marginVertical="16dp"
            style="@style/TextAppearance.App.HeadlineSmall"
            app:layout_constraintTop_toBottomOf="@id/posterImage"
            app:layout_constraintStart_toStartOf="@id/posterImage"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toStartOf="@id/textView6"
            android:background="@color/accent"/>

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="14dp"
            android:layout_marginHorizontal="25dp"
            style="@style/TextAppearance.App.BodyLarge"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hyphenationFrequency="normal"
            tools:text="@tools:sample/lorem/random"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>